{
  "version": 2,
  "buildCommand": "cd frontend && pnpm run build",
  "outputDirectory": "frontend/.next",
  "installCommand": "npm install -g pnpm@10.18.1 && pnpm install --frozen-lockfile",
  "framework": "nextjs",
  "redirects": [
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "www.verisplatform.com"
        }
      ],
      "destination": "https://verisplatform.com/$1",
      "permanent": true
    }
  ],
  "regions": ["iad1"]
}
