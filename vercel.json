{
  "version": 2,
  "buildCommand": "pnpm run build",
  "rootDirectory": "frontend",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "installCommand": "npm install -g pnpm && cd .. && pnpm install",
  "redirects": [
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "www.verisplatform.com"
        }
      ],
      "destination": "https://verisplatform.com/$1",
      "permanent": true
    }
  ],
  "regions": ["iad1"]
}
