{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "redirects": [
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "www.verisplatform.com"
        }
      ],
      "destination": "https://verisplatform.com/$1",
      "permanent": true
    }
  ],
  "env": {
    "DEPLOY_MODE": "staging",
    "STRIPE_MODE": "test",
    "C2PA_MODE": "off",
    "MIRROR_MODE": "auto",
    "ALERT_MODE": "slack"
  },
  "functions": {
    "frontend/src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "regions": ["iad1"],
  "framework": "nextjs"
}
