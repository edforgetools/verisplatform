{
  "version": 2,
  "buildCommand": "corepack enable && corepack pnpm exec next build",
  "rootDirectory": "frontend",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "installCommand": "cd .. && corepack enable && corepack pnpm install --frozen-lockfile",
  "redirects": [
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "www.verisplatform.com"
        }
      ],
      "destination": "https://verisplatform.com/$1",
      "permanent": true
    }
  ],
  "regions": ["iad1"]
}
