# Veris Environment Configuration
# Aligned with veris_execution_build_plan_v4.4.md

# Deployment Mode
DEPLOY_MODE=staging
# Values: staging | prod

# Stripe Configuration
STRIPE_MODE=test
# Values: test | live
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_ACCESS_TOKEN=your_access_token_here

# AWS Configuration
AWS_REGION=us-east-1
REGISTRY_BUCKET_STAGING=veris-registry-staging
REGISTRY_BUCKET_PROD=veris-registry-prod
AWS_ROLE_VERCEL_ARN=arn:aws:iam::account:role/vercel-role
AWS_ROLE_GITHUB_ARN=arn:aws:iam::account:role/github-role

# C2PA Configuration
C2PA_MODE=off
# Values: on | off

# Mirror Configuration
MIRROR_MODE=auto
# Values: auto | manual
ARWEAVE_WALLET_JSON={"kty":"RSA","n":"your_arweave_wallet_json_here"}

# Alert Configuration
ALERT_MODE=slack
# Values: slack | email | none
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

# Application Configuration
APP_BASE_URL=https://your-app.vercel.app
NEXT_PUBLIC_APP_URL=https://your-app.vercel.app

# Security Configuration
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=https://your-app.vercel.app

# Development Configuration
NODE_ENV=development
VERCEL_ENV=development

# Email service (for sign-off notifications)
RESEND_API_KEY=re_***
SENDGRID_API_KEY=SG.***

# Feature flags
ENABLE_SIGNOFF_FLOW=true
ENABLE_EVIDENCE_EXPORT=true
ENABLE_C2PA_CHECK=false

# Veris Platform Configuration
VERIS_ISSUER=Veris Platform
NEXT_PUBLIC_SITE_URL=https://your-app.vercel.app

# Optional: Additional configuration
# Add any additional environment variables your application needs
